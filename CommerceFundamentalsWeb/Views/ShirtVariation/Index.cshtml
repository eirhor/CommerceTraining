@model CommerceFundamentalsWeb.Models.ViewModels.ShirtVariationViewModel

<div>
    <img src="@Model.image" alt="@Model.name" />
    <p>@Model.priceString</p>
    <label>Can be monogrammed?</label>
    @Html.CheckBoxFor(m => m.CanBeMonogrammed)
    <div>
        @using (Html.BeginForm("AddToCart", "ShirtVariation"))
        {
            <div>
                Quantity: <input type="text" name="Quantity" value="1" />
            </div>
            <div>
                Monogram: <input type="text" name="Monogram" />
            </div>
            <div>
                <input type="submit" value="Add to cart" />
            </div>
        }
    </div>

    <div>
        @using (Html.BeginForm("AddToWishList", "ShirtVariation"))
        {
            <div>
                <input type="submit" value="Add to wishlist" />
            </div>
        }
    </div>
</div>
